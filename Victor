  </div>  <script>
    // small client-side interactions
    document.getElementById('year').textContent = new Date().getFullYear();

    function handleSubmit(e){
      e.preventDefault();
      const form = e.target;
      const data = new FormData(form);
      // In production, wire this to your backend or Formspree/Zapier. We show a toast for demo.
      alert('Thanks, '+ data.get('name') + '! Your message was received.');
      form.reset();
    }

    // aesthetic toggle: slightly alter theme to an alternate gradient
    const btn = document.getElementById('darkToggle');
    let alt=false;
    btn.addEventListener('click', ()=>{
      alt = !alt;
      if(alt) document.documentElement.style.setProperty('--accent-start','#f472b6'), document.documentElement.style.setProperty('--accent-end','#7c3aed');
      else document.documentElement.style.setProperty('--accent-start','#5eead4'), document.documentElement.style.setProperty('--accent-end','#60a5fa');
    });

    // keyboard shortcut: press "/" to focus search/contact
    window.addEventListener('keydown', (e)=>{
      if(e.key==='/'){
        e.preventDefault();
        const name = document.querySelector('input[name="name"]');
        if(name) name.focus();
      }
    });
  </script></body>
